<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_bindslice"
        android:layout_width="194dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="绑定SliceProvider"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="194dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:text="启动界面"
        app:layout_constraintEnd_toEndOf="@+id/btn_bindslice"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_bindslice"
        app:layout_constraintTop_toBottomOf="@+id/btn_bindslice" />

    <Button
        android:id="@+id/btn_webview"
        android:layout_width="191dp"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:onClick="loadData"
        android:text="webview加载url"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/btn_start"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_start"
        app:layout_constraintTop_toBottomOf="@+id/btn_start" />

    <WebView
        android:id="@+id/webview"
        android:layout_width="409dp"
        android:layout_height="565dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_webview"
        tools:layout_editor_absoluteX="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>